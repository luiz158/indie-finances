<%= form_for(@resource, :url => @resource.action_path, :as => "dre") do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this dre from being saved:</h2>

      <ul>
        <% @dre.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% @resource.dre_fields.each do |attribute| %>
    <div class="field">
      <%= f.label attribute.to_sym %><br />
      <% if attribute == "name" %>
        <%= f.text_field  attribute.to_sym %>
      <% else %>
        <%= f.text_field  attribute.to_sym, :class => "currency" %>
      <% end %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-maskmoney/3.0.2/jquery.maskMoney.min.js" ></script>
<script>
$(function() {
  $(".currency").maskMoney({thousands:'.', decimal:',', allowZero:true});
})

</script>
